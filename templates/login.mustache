{{!
    @template theme_boost/login

    Login page template

    Example context (json):
    {
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Login page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headers keep HTML validators happy</h1>"
            "loginintro": "<h2>Welcome to our Moodle</h2><p>Hello, and welcome to Moodle.</p>"
        }
    }
}}
{{{ output.doctype }}}
<html {{{ output.htmlattributes }}}>
<head>
    <title>{{{ output.page_title }}}</title>
    <link rel="shortcut icon" href="{{{ output.favicon }}}" />
    {{{ output.standard_head_html }}}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body {{{ bodyattributes }}}>

<div id="page-wrapper">

    {{{ output.standard_top_of_body_html }}}
    {{>theme_boost/header}}

    <div id="page" class="container-fluid">
        <div id="page-content" class="row">
            <div id="region-main-box">
                <section id="region-main" class="col-xs-12">
                    {{{ output.course_content_header }}}
                    <div class="gu-login-spacer hidden-xs-down"></div>
						<div class="row justify-content-center">
						    <div class=" hidden-xs-down col-sm-7 col-md-8 col-lg-7 col-xl-7 push-lg-1 push-xl-1">
						        <div class="gu-login-intro">
						            {{#loginintro}}
						            {{{loginintro}}}
						            {{/loginintro}}
						            {{^loginintro}}
						            <h2>Centro de Investigación avanzada en Educación</h2>
						            <h2>Escribiendo.Online</h2>
						            {{/loginintro}}
						        </div>
						    </div>
						    <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3 col-xl-3 push-lg-1 push-xl-1">
						        {{{ output.main_content }}}
						    </div>
						</div>
                    {{{ output.course_content_footer }}}
                </section>
            </div>
        </div>
    </div>
</div>
{{{ output.standard_end_of_body_html }}}

</body>
</html>
{{#js}}
require(['theme_boost/loader']);
{{/js}}
